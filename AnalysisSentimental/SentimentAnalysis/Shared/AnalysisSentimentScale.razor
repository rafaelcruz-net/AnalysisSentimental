<div class="sentiment">
    <h4>You feel...</h4>
    <p>🤬🙁😐😃😍</p>

    <div class="marker">
        <div style="left: @Value.ToString().Replace(",", ".")%">
            <div><span class="oi oi-arrow-thick-top"></span></div>
            <label>@Value.ToString("0.0")%</label>
        </div>
    </div>
</div>


@functions {
    [Parameter] public float Value { get; set; }
}